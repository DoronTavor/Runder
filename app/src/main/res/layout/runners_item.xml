<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="שם ושם משפחה"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="גיל"
        android:textSize="30dp"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FS_TextView"
        android:layout_width="172dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boxtext"
        android:gravity="right"
        android:textColor="@color/purple_200"
        android:text="ישראל ישראלי"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AgeTextViewRunners"
        android:layout_width="78dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxtext"
        android:gravity="center"
        android:text="18"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView19"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FS_TextView" />

    <TextView
        android:id="@+id/GenderTextViewRunners"
        android:layout_width="78dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxtext"
        android:gravity="center"
        android:text="זכר"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView19"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AgeTextViewRunners" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:text="מין"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/GenderTextViewRunners"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/NEWTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מרחק ריצה"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.324" />

    <TextView
        android:id="@+id/DistanceTV"
        android:layout_width="56dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:text="20 KM"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:background="@drawable/boxtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NEWTV"
        app:layout_constraintVertical_bias="0.142" />

    <TextView
        android:id="@+id/NEWTVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קצב(קמ לשעה)"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GenderTextViewRunners"
        app:layout_constraintVertical_bias="0.342" />

    <TextView
        android:id="@+id/SpeedNewTv"
        android:layout_width="56dp"
        android:layout_height="35dp"
        android:background="@drawable/boxtext"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:text="5 KM/H"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NEWTVV"
        app:layout_constraintVertical_bias="0.175" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/NewPic"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SpeedNewTv"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GenderTextViewRunners"
        app:layout_constraintVertical_bias="0.906">

    </de.hdodenhof.circleimageview.CircleImageView>
</androidx.constraintlayout.widget.ConstraintLayout>